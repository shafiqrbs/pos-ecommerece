{% extends '::base-report.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12 print-bar">
            <form name="searchForm" id="searchForm" action="{{ path('accounting_report_customer_order_overview_ajax') }}" method="post">
                <div class="grid-container-4">
                    <div class="grid-item">
                        <label>Customer</label>
                        <select class="search-input span12 select2 m-wrap" required="required" id="customerId" name="customerId">
                            <option value="">--Select Customer--</option>
                            {% for row in customers %}
                                <option {% if searchForm.customerId is defined and searchForm.customerId == row.id %} selected="selected" {% endif %} value="{{ row.id }}">{{ row.mobile }}-{{ row.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="grid-item">
                        <label>Start & End Date</label><br/>
                        <div class="col-md-6">
                            <input type="date" class="m-wrap span6 datepicker" required="required"  id="startDateTime" name="startDateTime" value="{% if searchForm.startDateTime is defined %}{{ searchForm.startDateTime }}{% endif %}">
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="m-wrap span6 datepicker m-wrap" required="required"  id="endDateTime" name="endDateTime" value="{% if searchForm.endDateTime is defined %}{{ searchForm.endDateTime }}{% endif %}">
                        </div>
                    </div>
                    <div class="grid-item">
                        <label>&nbsp;</label><br/>
                       {# <div class="col-md-6">
                            <select class="search-input span12 m-wrap" id="mode" name="mode">
                                <option value="">--Select Mode--</option>
                                {% for row in groups %}
                                    <option {% if searchForm.mode is defined and searchForm.mode == row.name %} selected="selected" {% endif %} value="{{ row.name }}">{{ row.name }}</option>
                                {% endfor %}
                            </select>
                        </div>#}
                        <div class="col-md-6">
                            <button type="button" class='btn btn-download btn-margin-left ajax-btn' value="search" name="submit" ><i class='fa fa-search'></i> Ledger</button>
                            <button class="btn purple" onclick="exportExcel()" type="button"><i class="fa fa-file"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="loader loader-double" ></div>
    <div id="print-area">
        <div class="row print-header">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <p><strong style="font-size:18px">{{ option.name }}</strong></p>
                <p><strong>Name of Report: Customer Order Overview</strong></p>
            </div>
            <div class="col-md-4 text-right">Printed: {{ "now"|date('d-m-Y') }}</div>
        </div>
        <div class="row">
            <div class="col-md-12" id="data-load"></div>
        </div>
    </div>
    <script>
        function exportExcel() {
            var table = document.querySelector('#downloadExcel');
            TableToExcel.convert(table);
        }
    </script>
{% endblock %}



