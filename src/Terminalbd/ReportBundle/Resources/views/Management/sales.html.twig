{% extends '::base-management-report.html.twig' %}
{% block body %}
    <div id="print-area">
        <div class="row">
            <div class="col-md-12 print-bar">
                <form action="" method="get">
                    <div class="row">
                        <div class="col-md-3 margin-top">
                            <label>Start Date</label>
                            <input type="date" class="m-wrap" id="startDate" name="startDate" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}">
                        </div>
                        <div class="col-md-3 margin-top">
                            <label>End Date</label>
                            <input type="date" class="m-wrap" id="endDate" name="endDate" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}">
                        </div>
                        <div class="col-md-1 margin-top">
                            <label>&nbsp;</label>
                            <button class='btn btn-download btn-margin-left' value="search" name="submit" ><i class='fa fa-search'></i> Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row print-header">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <p><strong>{{ option.name }}</strong></p>
                <p><strong>Name of Report: Sales Overview</strong></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-condensed flip-content ">
                    <thead class="flip-content ">
                    <tr class="head-green">
                        <th class="numeric" >Created</th>
                        <th class="numeric" >Time</th>
                        <th class="numeric" >Invoice</th>
                        <th class="numeric" >Customer</th>
                        <th class="numeric" >Mobile</th>
                        <th class="numeric" >Device Sales</th>
                        <th class="numeric" >Sub-Total</th>
                        <th class="numeric" >Discount</th>
                        <th class="numeric" >Net Total</th>
                        <th class="numeric" >Payment</th>
                        <th class="numeric" >Due</th>
                        <th class="numeric" >Sales By</th>
                        <th class="numeric" >Status</th>
                        <th class="numeric" >Action</th>
                    </tr>
                    </thead>
                    <tbody id="sales">
                    {% for entity in entities %}
                        <tr id="salesRemove-{{ entity.id }}">
                            <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                            <td class="numeric" >{{ entity.created|date('h:i A') }}</td>
                            <td class="numeric" >{{ entity.invoice }}</td>
                            <td class="numeric" >{% if entity.customer is not empty %}{{ entity.customer.name }}{% endif %}</td>
                            <td class="numeric" >{% if entity.customer is not empty %}{{ entity.customer.mobile }}{% endif %}</td>
                            <td class="numeric" >{{ entity.deviceSalesId }}</td>
                            <td class="numeric" >{{ entity.subTotal|number_format  }}</td>
                            <td class="numeric" >{{ entity.discount|number_format  }}</td>
                            <th class="numeric" >{{ entity.total|number_format  }}</th>
                            <th class="numeric" >{{ entity.payment|number_format }}</th>
                            <td class="numeric" >{{ entity.due|number_format }}</td>
                            <td class="numeric" >{% if entity.salesBy %}{{ entity.salesBy.profile.name }}{% endif %}</td>
                            <td class="numeric" >{{ entity.process|capitalize }}</td>
                            <td class="numeric" >
                               <a href="{{ path('report_management_customer_sales_details', { 'id': entity.id }) }}" class="btn purple mini" >Show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="pagination pull-center"  >
            {{ knp_pagination_render(entities) }}
        </div>
    </div>

{% endblock %}


